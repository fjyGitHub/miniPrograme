/* pages/detail/detail.wxss */
image{
	display: block;
}
.detail_container{
	width: 100%;
	height: 100%;
	overflow-x: hidden;
  position: relative;
}
swiper{
	width:750rpx;
	height:750rpx;
}
.banner{
  width:750rpx;
  height:750rpx;
  position: relative;
}
.banner>image{
  width: 190rpx;
  height: 190rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.goods_info.group_info {
	height: 104rpx;
	width: 750rpx;
	display: flex;
	align-items: center;
	font-size: 28rpx;
}
.group_info {
	height: 104rpx;
	width: 750rpx;
	display: flex;
	color: #FFFFFF;
	align-items: center;
	font-size: 28rpx;
	justify-content: space-between;
	background:linear-gradient(270deg,#FF9963 0%,#F77257 50%,#F35D51 100%);
}
.goods_info .price_info {
	display: flex;
	align-items: center;
}
.goods_info.normal_info .price_info {
	align-items: baseline;
}
.normal_info .price_info {
	padding: 24rpx 24rpx 0;
	font-size: 28rpx;
	color: #9EA8B1;
}
.normal_info .price {
	color: #F35D51;
	font-size: 48rpx;
}
.normal_info .price text {
	font-size: 32rpx;
}
.normal_info .price_info .info_origin_price {
	text-decoration: line-through;
	margin-left: 8rpx;
}
.price_info .price.group_price {
	font-size: 80rpx;
	margin: 0 24rpx;
	color: #FFFFFF;
}
.info_number {
	text-align: center;
	margin-bottom: 2rpx;
}
.group_info .info_origin_price {
	font-size: 24rpx;
	background: #F35D51;
	border-radius: 4rpx;
	text-align: center;
	color: #FABEB9;
}
.price_info .group_price text {
	font-size: 48rpx;
}
.goods_info .count_down {
	margin-right: 26rpx;
	font-size: 22rpx;
}
.count_down .count_copywrite {
	text-align: center;
	font-size: 26rpx;
}
.count_down .count_time {
	margin-top: 8rpx;
	color: #F15043;
	display: flex;
	align-items: center;
}
.count_time .colon {
	margin: 0 4rpx;
}
.count_time text.time {
	display: inline-block;
	width: 36rpx;
	height: 36rpx;
	background: #F35D51;
	color: #FFFFFF;
	text-align: center;
	line-height: 36rpx;
}
.description{
  font-size: 26rpx;
  padding-bottom: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx 24rpx 100rpx;
  border-top: 24rpx solid #F7F9FB;
}

.description img{
  width: 100% !important;
  padding: 0;
  margin: 0 auto;
  margin-top: 20rpx;
}
.description p{
  font-size: 26rpx;
}
.detail_imgs image{
	width: 750rpx;
	height: 750rpx;
	display: block;
}

/* 拼团或砍价  */
.groups .groups_header {
	border-top:24rpx solid #F7F9FB;
}
.group_show_more {
	font-size: 28rpx;
	padding: 24rpx;
	color: #556675;
	border-bottom: 2rpx solid #F3F4F5;
}
.group_show_more .more {
  color: #999999;
  font-size: 26rpx;
}
.header_users {
  padding: 0 20rpx;
}
.header_users .user_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  font-size: 24rpx;
}
.header_users .user_item:not(:last-child) {
  border-bottom: 1px solid #EBEBEB;
}
.user_item .user_info {
  display: flex;
  max-width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  align-items: center;
}
.user_item .user_info image {
  display: block;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}
.user_item .user_info text {
  font-size: 28rpx;
  color: #253A4E;
  margin-left: 8rpx;
  display:inline-block;
  max-width:75%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.user_item .user_operation {
  display: flex;
  align-items: center;
}
.user_operation .user_prompt {
  margin-right: 16rpx;
}
.user_prompt .prompt_texts {
  color: #253A4E;
}
.user_prompt .prompt_texts .red {
  color: #F35D51;
}
.user_prompt .rest_time {
  color: #9EA8B1;
}
.user_operation .prompt_button {
  width: 110rpx;
  height: 48rpx;
  background-image: linear-gradient(90deg,#FF9963 0%,#F77257 50%,#F35D51 100%);
  border-radius: 4rpx;
  font-size: 26rpx;
  padding: 0;
  color: #FFFFFF;
  text-align: center;
  line-height: 48rpx;
}
.groups .groups_bottom {
  border-top: 24rpx solid #F7F9FB;
}
.groups .play_rules {
  padding: 24rpx;
  color: #556675;
  font-size: 28rpx;
  display: flex;
  border-bottom: 1px solid #EBEBEB;
  justify-content: space-between;
  align-items: center;
}
.play_rules image {
	width: 40rpx;
	height: 40rpx;
}
.groups_bottom .rules_step {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.rules_step .step_item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.step_item .step_text {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 24rpx;
  color: #556675;
  margin-left: 8rpx;
  line-height: 32rpx;
}
.dashed_line {
	width:56rpx;
	border-top: 2rpx dashed #E6E9EB;
	position: relative;
}
.dashed_line:after {
	content: '';
    display: block;
    width: 10rpx;
	height: 2rpx;
	position: absolute;
	right: 0;
	top: -5rpx;
    background: #E6E9EB;
    transform: rotate(45deg);
}
.rules_step .step_item image {
  width: 64rpx;
  height: 64rpx;
  display: block;
}

/* description  */
.name_share{
	display: flex;
	justify-content: space-between;
}
.detail_description .des_name {
	width: 566rpx;
	height: 88rpx;
	color: #253A4E;
	font-size: 32rpx;
	margin-top: 16rpx;
	margin-left: 24rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	display:-webkit-box;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
	font-weight: 500;
}
.name_share button{
	background: #F7F9FB;
	width: 136rpx;
	height: 52rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	align-items: center;
	line-height: normal;
	margin: 0;
	margin-top: 34rpx;
	color: #9EA8B1;
	padding: 0;
	font-size: 26rpx;
	border-radius:8rpx 0px 0px 8rpx;
}
.name_share button::after{
	border: none;
	border-radius: 0;
}
.name_share image{
	width: 27rpx;
	height: 27rpx;
	margin-right: 8rpx;
}
.express_sales {
	padding: 24rpx;
	font-size: 26rpx;
	color: #9EA8B1;
	overflow: hidden;
}
.express_sales view {
	float: left;
}
.express_sales view:first-child {
	margin-right: 128rpx;
}
.detail_promise{
	padding: 24rpx;
	color: #9EA8B1;
	border-top: 1px solid #F3F4F5;    
	font-size: 28rpx;
}
.detail_promise .promises{
	color: #253A4E;
	margin-left: 18rpx;
}
.detail_promise view:nth-child(n+2){
  margin-left: 56rpx;
}

/* bottom button  */
.detail_bottom{
	width: 750rpx;
	position: fixed;
	bottom: 0;
  z-index: 100;
	background: #FEFEFE;
	padding: 24rpx 24rpx 24rpx 26rpx;
	box-sizing: border-box;
	display: flex;
	align-items: flex-start;
	justify-content: space-between;
	box-shadow:0px -2rpx 0px 0px #E6E9EB;
}
.detail_bottom image{
	width: 48rpx;
	height: 48rpx;
}
.detail_bottom .detail_cart{
	width: 66rpx;
	height: 80rpx;
	font-size: 22rpx;
  position: relative;
  box-sizing: border-box;
	color: #6E7C89;
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
}
.detail_cart label{
  position: absolute;
  background: #EA2534;
  color: #fff;
  line-height: 30rpx;
  text-align: center;
  top: -4rpx;
  right: 0rpx;
  font-size: 20rpx;
  min-width:30rpx;
  height: 30rpx;
  border-radius: 15rpx; 
}
.detail_bottom .addCart{
	width: 250rpx;
	height: 80rpx;
  box-sizing: border-box;
	background:linear-gradient(90deg,#FFD148 0%,#FFAA16 100%);
	font-size: 28rpx;
	color: #FFFFFF;
	text-align: center;
	line-height: 80rpx;
	border-radius:8rpx 0 0 8rpx;
	padding: 0;
}
.detail_bottom .detail_buttons {
	display: flex;
}
.detail_buttons .buttons_right {
	margin-left: 4rpx;
}
.detail_bottom .disAddcart{
  background: #CACACA;
  color: #fff;
}
.detail_bottom button:after{
  border-radius: 0;
  border: 0;
}
.detail_bottom .buy{
	width: 250rpx;
	height: 80rpx;
	background:linear-gradient(90deg,#F87358 0%,#F35D51 100%);
	font-size: 28rpx;
	text-align: center;
	color: #FFFFFF;
  border-radius:0 8rpx 8rpx 0;
	padding:0;
	line-height: 80rpx;
}
.detail_bottom .group_button {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.group_button .group_button_price {
  font-size: 36rpx;
}
.detail_bottom .disBuy{
  background: #B4B0B1
}
.soldTips{
  position: fixed;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  height: 106rpx;
  font-size: 36rpx;
  z-index: 100;
  color: #fff;
  background: rgba(0, 0, 0, 0.6);
  text-align: center;
  line-height:106rpx;
}
/* mask  */
.mask{
	width: 750rpx;
	height: 100%;
	background: #000;
	z-index: 10;
	position: fixed;
	top: 0;
	opacity: 0.4;
}

/* choose  */
.choose{
	position: fixed;
	z-index: 100;
	width: 750rpx;
	box-sizing: border-box;
	bottom: 0;
	background: #FFFFFF;
	padding: 24rpx;
	border-radius: 20rpx 20rpx 0 0;
}
.choose_price{
	margin-bottom: 40rpx;
	color: #9EA8B1;
	display: flex;
	align-items: flex-end;
	font-size: 26rpx;
}
.choose .choose_price image:first-child{
	width: 176rpx;
	height: 176rpx;
	display: block;
	flex-shrink: 0;
}
.choose_price .desc{
	display: flex;
	flex-direction: column;
	margin-left: 24rpx;
}
.choose_price .desc view text{
  margin-right: 10rpx;
}
.choose_price .desc>text:first-child{
	color: #F35D51;
	font-size: 36rpx;
  margin-bottom: 16rpx;
}
.choose_price .desc>text:first-child text {
	font-size: 24rpx;
}
.choose_price .desc>text:nth-child(2){
  margin-bottom: 16rpx;
}
.choose_price image:last-child{
	position: absolute;
	top: 24rpx;
	right: 24rpx;
	width: 40rpx;
	height: 40rpx;
}

.color_size{
	overflow: scroll;
	color: #556675;
}

/* choose color  */
.title{
	display: block;
	margin-bottom: 16rpx;
	font-size: 26rpx;
}
.choose_color {
	border-bottom: 2rpx solid #F3F4F5;
	padding-top: 24rpx;
}
.choose_color view{
	display: flex;
  justify-content: flex-start;
	padding-left:18rpx;
	overflow: hidden;
  flex-wrap: wrap;
  /* padding-bottom: 16rpx; */
}
.choose_color view label{
	padding: 14rpx 24rpx;
  line-height: 36rpx;
	background: #F7F9FB;
  border-radius: 8rpx;
	margin-right: 24rpx;
	margin-bottom: 24rpx;
	font-size: 26rpx;
	box-sizing: border-box;
}

/* active style  */
.choose view label.active{
	background: rgba(243, 93, 81, 0.05);
	padding: 12rpx 22rpx;
	color: #F15043;
	border:2rpx solid #F35D51;
}

/* count  */
.count{
	padding-top: 24rpx;
	display: flex;
	align-items: center;
  margin-bottom: 128rpx;
	justify-content: space-between;
	color: #556675;
}
.count .number{
	font-size: 26rpx;
}
.count view{
	height: 64rpx;
	display: flex;
}
.count view text{
	display: block;
	width: 64rpx;
	height: 64rpx;
	text-align: center;
	line-height: 60rpx;
	border: 2rpx solid #CFD3D8;
	box-sizing: border-box;
}
.count view text:first-child {
	border-radius: 4rpx 0 0 4rpx;
}
.count view text:last-child{
	border-radius: 0 4rpx 4rpx 0;
}
.count view .num {
	width: 96rpx;
	height: 64rpx;
	font-size: 28rpx;
	border: none;
	border-top: 2rpx solid #CFD3D8;
	border-bottom: 2rpx solid #CFD3D8;
	color: #253A4E;
	line-height: 60rpx;
	text-align: center;
}

/* 禁用样式  */
.disabled{
	color: #E3E3E3;
}

/* confirm  */
.confirm{
	width: 702rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	background: linear-gradient(90deg,#FF9963 0%,#F77257 50%,#F35D51 100%);
	color: #FFFFFF;
	font-size: 32rpx;
	padding: 0;
	border-radius: 8rpx;
}

.store{
    width: 100%;
    box-sizing: border-box;
    height: 100rpx;
    padding:10rpx 20rpx 0;
    display: flex;
    border-top: 1rpx solid #e2e2e2;
    justify-content: space-between;
    align-items: center;
}
.store image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 18rpx
}
.store>view{
  display: flex;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  align-items: center;
}
.store navigator{
  width: 140rpx;
  height: 52rpx;
  box-sizing: border-box;
  border: 1rpx solid #9B9B9B;
  border-radius: 26rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999999;
  line-height: 50rpx;
}