page {
    background: #F7F9FB;
}
.content {
    padding: 0 24rpx;
}
.withdraw_box {
    background: #FFFFFF;
    margin-top: 24rpx;
    border-radius: 8rpx;
    box-shadow: 0px 6px 16px 0px rgba(13,37,59,0.04);
    overflow: hidden;
}
.orange {
    color: #F35D51;
}
.disabled {
    color: rgba(255,255,255,0.49) !important;
}
.medium_weight {
    font-weight: 500;
}
.withdraw_box .draw_header {
    font-size: 32rpx;
    color: #253A4E;
    padding: 24rpx;
    border-bottom: 2rpx solid #F3F4F5;
}
.draw_operation {
    padding: 32rpx 24rpx 48rpx;
    font-size: 28rpx;
    color: #6E7C89;
    border-bottom: 2rpx solid #F3F4F5;
}
.draw_operation .title_tips {
    color: #314558;
}
.draw_operation .input_box {
    display: flex;
    align-items: center;
    padding: 32rpx 0;
    border-bottom: 2rpx solid #F3F4F5;
}
.input_box text {
    color: #253A4E;
    font-size: 48rpx;
    font-weight: 500;
}
.input_box .draw_input {
    margin-left: 4rpx;
    height: 76rpx;
    font-size: 60rpx;
    color: #314558;
}
.draw_operation .content_tips {
    margin-top: 32rpx;
}
.draw_operation .applic_draw {
    width: 654rpx;
    height: 80rpx;
    background:linear-gradient(90deg,#FF9963 0%,#F77257 50%,#F35D51 100%);
    border-radius:8rpx;
    text-align: center;
    line-height: 80rpx;
    color: #FFFFFF;
    margin-top: 48rpx;
    font-size: 32rpx;
}
.withdraw_box .draw_bottom {
    padding: 24rpx;
    font-size: 26rpx;
    color: #556675;
    line-height: 44rpx;
}

.withdraw_detail {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #FFFFFF;
    margin-top: 24rpx;
    border-radius: 8rpx;
    padding: 24rpx;
    box-shadow:0px 6px 16px 0px rgba(13,37,59,0.04);
    font-size: 32rpx;
    color: #253A4E;
}
.withdraw_detail image {
    width: 40rpx;
    height: 40rpx;
    display: block;
}