page {
    background: #F7F9FB;
}
.content_margintop {
    margin-top: 24rpx;
}
.content_header {
    padding-left: 24rpx;
    width: 750rpx;
    height: 386rpx;
    box-sizing: border-box;
    background: #FFFFFF;
}
.content_header .user_info {
    display: flex;
    align-items: center;
    padding: 32rpx 0;
    font-size: 32rpx;
    color: #253A4E;
    font-weight: 500;
    border-bottom: 2rpx solid #F3F4F5;
}
.user_info image {
    flex-shrink: 0;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
}
.user_info .info_detail {
    margin-left: 20rpx;
    flex-grow: 1;
}
.info_detail .info_time {
    margin-top: 16rpx;
    font-weight: 400;
    font-size: 26rpx;
    color: #9EA8B1;
}
.content_header .commission {
    padding: 32rpx 32rpx 32rpx 0;
    display: flex;
    justify-content: space-between;
}
.commission .commission_box {
    width: 216rpx;
    height: 160rpx;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 26rpx;
    color: #FFFFFF;
    box-sizing: border-box;
    padding-left: 24rpx;
    box-shadow:0px 6px 16px 0px rgba(13,37,59,0.04);
}
.commission_box.total_commission {
    background: linear-gradient(90deg,#FF9963 0%,#F77257 50%,#F35D51 100%);
}
.commission_box.pending_commission {
    background: linear-gradient(180deg,#6468FF 0%,#549BFF 100%);
}
.commission_box.avail_commission {
    background: linear-gradient(180deg,#19B47F 0%,#3FCD9C 100%);
}
.commission_box .price_tips {
    opacity: 0.8;
    font-size: 24rpx;
}
.commission_box .price {
    overflow: hidden;
	text-overflow:ellipsis;
	display:-webkit-box;
	-webkit-box-orient:vertical;
    -webkit-line-clamp:1;
}
.commission_box .price text:first-child {
    font-size: 48rpx;
    margin-left: -6rpx;
}
.commission_box .price text:last-child {
    font-size: 24rpx;
}

.content_body {
    width: 750rpx;
    height: 280rpx;
    background: #FFFFFF;
    box-sizing: border-box;
    padding-left: 24rpx;
}