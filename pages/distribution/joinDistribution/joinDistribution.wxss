.content {
    border-top: 24rpx solid #F6F8FA;
    padding: 24rpx;
    color: #556675;
    font-size: 28rpx;
}
.content .content_title {
    font-size: 32rpx;
    color: #253A4E;
    text-align: center;
    font-weight: 500;
    margin-bottom: 24rpx;
}
.bottom {
    position: fixed;
    width: 750rpx;
    bottom: 0;
    z-index: 100;
    height: 170rpx;
    box-sizing: border-box;
    padding: 24rpx;
	box-shadow:0px -2rpx 0px 0px #E6E9EB;
}
.bottom .button {
    width: 702rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    background:linear-gradient(90deg,#FF9963 0%,#F77257 50%,#F35D51 100%);
    border-radius: 8rpx;
    color: #FFFFFF;
    font-size: 32rpx;
    font-weight: 500;
}

.mask {
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000000;
    opacity: 0.4;
    top: 0;
    left: 0;
    z-index: 1000;
}
.modal_content {
    position: absolute;
    z-index: 2000;
    top: 258rpx;
    left: 48rpx;
    width: 654rpx;
    height: 520rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
    overflow: hidden;
    text-align: center;
    font-size: 28rpx;
    color: #314558;
}
.modal_content .modal_img {
    width: 500rpx;
    height: 320rpx;
    margin-top: 80rpx;
}
.modal_content .close {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 32rpx;
    top: 32rpx;
}
.modal_content .tips {
    margin-top: 24rpx;
}