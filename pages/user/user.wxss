/**用户信息**/
page{
  background: #F7F9FB;
}
.user_box {
  overflow: hidden;
  position: relative;
}
.userinfo-bg{
  display: block;
  width: 750rpx;
  height: 354rpx;
  overflow: hidden;
}
.userinfo-bg-avatar{
  width: 750rpx;
  height: 354rpx;
  background: #FFFFFF;
  overflow: hidden;
  display: block;
}
.container {
  position: absolute;
  left: 24rpx;
  top: 24rpx;
  width:702rpx;
  height: 330rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 104rpx;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userinfo-right{
  margin-left: 25rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
}
.userinfo-avatar {
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  font-size:36rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.userinfo-count{
  font-size:26rpx;
  font-weight:400;
  color: #FFFFFF;
  margin-top: 16rpx;
}
.userinfo button{
    background: transparent;
    display: flex;
    align-items: center;
    flex-direction: row;
    width: 100%;
    justify-content: center;
    padding:0;
}
.userinfo button::after{  
  border:none; 
  border-radius: none;
}
.userinfo-right label{
  color: #FFFFFF;
  font-size:36rpx;
  font-weight:500;
}


/**订单**/
.orderinfo_box {
  padding: 0 24rpx;
}
.orderinfo {
  width: 702rpx;
  overflow: hidden;
  margin-top: 24rpx;
  border-radius: 8rpx;
  box-shadow:0rpx 6rpx 16rpx 0rpx rgba(13,37,59,0.04);
}
.myorder {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 20rpx;
  border-bottom:2rpx solid #F3F4F5;
  line-height: 82rpx;
  box-sizing: border-box;
  background: #fff;
}
.myorder view{
  font-size: 32rpx;
  color: #333333;
  display: flex;
  align-items: center;
}
.orderList{
  width: 702rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 156rpx;
  background:#fff;
  padding: 16rpx 0;
}
.orderList view{
  position: relative;
}
.orderList image{
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin:0 auto;
}
.orderList label{
  display: block;
  text-align: center;
  margin-top:14rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(85,102,117,1);
}
.orderList text{
  position: absolute;
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 50%;
  top:-6rpx;
  right:-6rpx;
  background: #fff;
  border: 4rpx solid #FF8660;
  line-height: 32rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #FF8660;
}


/* 没有订单或优惠券 */
.bind_mobile {
  display: flex;
  height: 100rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  align-items: center;
  justify-content: space-between;
  border-top:1px solid #EBEBEB;
  background-color: #fff;
}
.bind_mobile_text{
  font-size:26rpx;
  font-weight:400;
  color:rgba(158,168,177,1);
}
.bind_mobile image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 10rpx;
}
.bind_mobile view {
  display: flex;
  font-size: 24rpx;
  align-items: center;
}
.bind_mobile button {
  width: 136rpx;
  font-size: 22rpx;
  color:rgba(243,93,81,1);
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  border:2rpx solid rgba(243,93,81,1);
  padding: 0;
  margin: 0;
  vertical-align: middle;
}
.bind_mobile button::after {
  border: none;
}


/* 其他信息 */
.my_other_box {
  padding: 0 24rpx;
}
.my_other{
  width: 702rpx;
  margin-top: 24rpx;
  border-radius: 8rpx;
  background: #fff;
  overflow: hidden;
  box-shadow:0rpx 6rpx 16rpx 0rpx rgba(13,37,59,0.04);
}
.my_other_nav{
  box-sizing: border-box;
  padding-right:20rpx;
  height: 96rpx;
  width:100%;
  position: relative;
  justify-content: space-between;
  align-items: center;
  display: flex;
  border-bottom: 2rpx solid  #F3F4F5; 
  background-color: #fff;
  border-top: 0;
  border-left: 0;
  border-right: 0;
  border-radius: unset;
  margin: 0;
  padding: 0 20rpx;
}
.my_other_nav::after {
  border: none;
  padding: 0;
}
.my_other_nav:last-child{
  border-bottom: 0;
}
.my_other_text{
  font-size:32rpx;
  font-weight:400;
  color:rgba(37,58,78,1);
}
.my_other_text image{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: -14rpx;
  margin-right: 20rpx;
}
.my_other_text view{
  display: inline-block;
}
.icon{
  width:16rpx;
  height:24rpx;
}