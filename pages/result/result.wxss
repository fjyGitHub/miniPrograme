/* pages/search/search.wxss */
/* search  */
page{
	background: #F7F9FBFF;
}
.search_container{
	display: flex;
	flex-direction: column;
}
.container_search{
	background: #FFFFFF;
}
.container_search_navi{
	box-sizing: border-box;
	margin: 0 auto;
	padding-left: 80rpx;
	position: relative;
	background: rgba(247,249,251,1);
	font-size: 32rpx;
	line-height: 80rpx;
	width: 702rpx;
	height: 80rpx;
	color:#253A4E;
	border-radius: 8rpx;
}
.container_search icon {
	display: block;
	width: 46rpx;
	height: 44rpx;
	position: absolute;
	top: 20rpx;
	left: 28rpx;
}

.search_family{
	width: 750rpx;
	font-size: 28rpx;
	color: #556675;
	display: flex;
	align-items: center;
	justify-content: space-around;
	border-top: 16rpx solid #FFFFFF;
	height: 72rpx;
	background: #FFFFFF;
	border-bottom: 2rpx solid #E6E9EB;  
}
.search_family>view {
	height: 72rpx;
	width: 33%;
	line-height: 72rpx;
	text-align: center;
}
.selected{
	color: #F15043;
}
.family_arrow{
	display: flex;
	align-items: center;
	justify-content: center;
}
.arrows{
	display: flex;
	flex-direction: column;
	justify-content: center;
	margin-left: 8rpx;
}
.arrows .arrow_up{
	display: inline-block;  
  vertical-align: top;
  border-bottom: 10rpx solid #D8D8D8;  
  border-right: 8rpx solid transparent;  
  border-left: 8rpx solid transparent;  
  content: "";
}
.arrows .arrow_down{
	display: inline-block;  
  vertical-align: top;  
  border-top: 10rpx solid #D8D8D8;  
  border-right: 8rpx solid transparent;  
  border-left: 8rpx solid transparent;  
  content: "";  
  margin-top: 6rpx;
}
.arrows .up{
	border-bottom: 8rpx solid #F15043;
}
.arrows .down{
	border-top: 8rpx solid #F15043;
}

.goods_list {
	display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 24rpx 24rpx 0;
	background:linear-gradient(180deg,#FFFFFF 0rpx,#F7F9FB 516rpx);
}
.goods_list .goods_item {
  width: 340rpx;
  height: 516rpx;
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0px 6rpx 16rpx 0px rgba(13,37,59,0.04);
  margin-bottom: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.goods_item image {
  width: 340rpx;
  height: 340rpx;
  border-radius: 0;
  display: block;
  flex-shrink: 0;
}
.goods_item .goods_info {
  padding: 16rpx 24rpx 22rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_info .title {
  height: 80rpx;
  font-size: 28rpx;
  color: #253A4E;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  line-height: 40rpx;
}
.goods_info .info {
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  color: #9EA8B1;
}
.goods_info .info .price {
  color: #F35D51;
  font-size: 32rpx;
}
.info .price text {
  font-size: 24rpx;
}

/* search button  */
.search_up{
	width: 60rpx;
	height: 60rpx;
	position: fixed;
	right: 20rpx;
	bottom: 78rpx;
}
.search_up image{
	width: 60rpx;
	height: 60rpx;
	display: block;
}