.rule_content {
	border-top: 2rpx solid #E3E3E3;
	padding: 20rpx 20rpx 0;
}

image {
	display: inline-block;
	vertical-align: middle;
}

.QA_list {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 44rpx;
}

.QA_list .question {
	font-family: PingFangSC-Medium;
	margin-bottom: 16rpx;
}

.QA_list .question .spot {
	width: 8rpx;
	height: 8rpx;
	background: #333;
	margin-right: 10rpx;
	margin-left: 4rpx;
	border-radius: 50%;
	display: inline-block;
	vertical-align: middle;
}

.QA_list .answer {
	padding-left: 56rpx;
}

/*拼团流程*/
.QA_list .question.collage_process {
	margin-bottom: 68rpx;
}

.QA_list .answer.collage_process {
	padding-left: 100rpx;
}

.QA_list .answer.collage_process::after {
	content: '';
	display: block;
	clear: both;
}

.QA_list .answer.collage_process .column {
		float: left;
		width: 200rpx;
		font-size: 26rpx;
		color: #666;
}

.QA_list .answer.collage_process .left {
}

.QA_list .answer.collage_process .right  {
	width: 208rpx;
}

.pro_detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 88rpx 54rpx 0;
  float: left;
}
.pro_detail .circle {
  width: 28rpx;
  height: 28rpx;
  background: #FFC0C5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pro_detail .circle_inner {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #FF5C68;
}
.pro_detail .line {
  width: 1px;
  height: 238rpx;
  background: #E2E2E2;
}

.QA_list .answer.collage_process .column >image {
	width: 200rpx;
	height: 200rpx;
	margin-bottom: 64rpx;
}

.QA_list .answer.collage_process .column >view {
	position: relative;
	width: 100%;
	height: 200rpx;
	margin-bottom: 70rpx;
}

.QA_list .answer.collage_process .column >view .middle {
	position: relative;
	top: 50%;
	transform: translateY(-50%);
	left: 0;
}










