/* pages/recommend/recommend.wxss */
/* recommend products  */
page{
	background: #F7F9FB;
	padding-top: 20rpx;
}

image {
	display: inline-block;
	vertical-align: middle;
}

.group_num {
	color: #F35D51;
}


/*商品部分*/

.group_details_goods {
	padding: 24rpx;
	background: #FFFFFF;
	width: 750rpx;
	height: 240rpx;
	box-sizing: border-box;
	display: flex;
	border-bottom: 2rpx solid #F3F4F5;
}
.group_details_goods.details_goods_end {
	border-bottom: 0;
}

.group_details_goods .goods_img {
	width: 192rpx;
	height: 192rpx;
  	border-radius:4rpx;
	position: relative;
	flex-shrink: 0;
}

.group_details_goods .goods_img .finished {
	width: 196rpx;
	height: 196rpx;
	position: absolute;
	z-index: 100;
	opacity: 0.4;
	top: 0;
	left: 0;
	background: #253A4E;
	color: #FFFFFF;
}
.finished_text {
	display: inline-block;
	position: absolute;
	top: calc(50% - 26rpx);
	left: calc(50% - 55rpx);
	z-index: 1000;
	color: #FFFFFF;
	width: 110rpx;
	height: 52rpx;
	font-size: 26rpx;
	border-radius: 4rpx;
	box-sizing: border-box;
	border: 2rpx solid #FFFFFF;
	text-align: center;
	line-height: 48rpx;
}

.group_details_goods .goods_info {
	margin-left: 24rpx;
	flex-grow: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.group_details_goods .goods_info .goods_title {
  font-size:28rpx;
	color:#253A4E;
	height: 72rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
}

.group_details_goods .goods_info .spec {
  font-size:26rpx;
	color:#9EA8B1;
	margin-top: 16rpx;
	height: 36rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:1;
}

.group_details_goods .goods_info .spec text {
	margin-right: 30rpx;
  overflow: hidden;
  display: inline-block;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 100%;
}

.group_details_goods .goods_info .goods_price_num {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.goods_info .goods_price_num .goods_group_price {
	margin-right: 16rpx;
  font-size:32rpx;
  color:#F35D51;
}

.goods_info .goods_price_num .goods_group_price text {
	font-size: 24rpx;
}

.goods_info .goods_price_num .goods_original_price {
		font-size: 24rpx;
		color: #9EA8B1;
		text-decoration:line-through;
}
.goods_info .goods_price_num .goods_num {
  font-size:26rpx;
  color:#9EA8B1;
}
/*商品部分 end*/

/*拼单部分*/
.group_situation_box {
	padding: 48rpx 24rpx 24rpx;
	background: #FFFFFF;
	text-align: center;
}

.group_situation_box .user_list {
	margin-top: 48rpx;
}

.group_situation_box .user_list .img_box {
	position: relative;
	display: inline-block;
	vertical-align: middle;
	margin-left: 34rpx;
}
.img_box .avatar_circle {
	width: 96rpx;
	height: 96rpx;
	box-sizing: border-box;
	border: 2rpx dashed #CFD3D8;
	border-radius: 50%;
	text-align: center;
	background: #F7F9FB;
}
.img_box .avatar_circle .empty_avatar {
	width: 48rpx;
	height: 48rpx;
	margin-top: 18rpx;
}

.group_situation_box .user_list .colonel {
	margin-left: 0;
}

.group_situation_box .user_list image {
	width: 96rpx;
	height: 96rpx;
	border-radius: 50%;
	box-sizing: border-box;
}

.group_situation_box .user_list .colonel image {
	border: 4rpx solid #F35D51;
}

.user_list .colonel .avatar_leader {
	border: none !important;
	width: 24rpx;
	height: 24rpx;
	position: absolute;
	top: 0;
	right: 0;
}

.group_situation_box .user_list .colonel text {
	position: absolute;
	top: -8rpx;
	left: -20rpx;
	background: #FF5C68;
	color: #fff;
	font-size: 20rpx;
	width: 60rpx;
	height: 30rpx;
	line-height: 30rpx;
	border-radius: 30rpx;
}

.group_situation_box .short {
	font-size: 28rpx;
	color: #556675;
}

.group_situation_box .remaining_time {
	margin-top: 24rpx;
	font-size: 26rpx;
	color: #9EA8B1;
}

.group_situation_box .remaining_time text {
	vertical-align: top;
	display: inline-block;
	font-size: 22rpx;
	color: #F15043;
	margin-left: 4rpx;
}

.group_situation_box .remaining_time text:last-child {
	margin-right: 4rpx;
}

.group_situation_box .remaining_time .time_block {
	background: #F35D51;
	border-radius: 4rpx;
	width: 36rpx;
	height: 36rpx;
	line-height: 36rpx;
	color: #fff;
	font-size: 22rpx;
}

.group_situation_box .successful_collage_tips {
	margin-bottom: 40rpx;
	font-size: 32rpx;
	color: #FF5C68;
}

.group_situation_box .invitation_btn {
	width: 702rpx;
	height: 80rpx;
	line-height: 80rpx;
	background: linear-gradient(90deg,#FF9963 0%,#F77257 50%,#F35D51 100%);
	border-radius: 8rpx;
	font-size: 32rpx;
	color: #fff;
	margin-top: 48rpx;
}

/*拼单部分end*/

/*拼单须知等其他信息*/
.group_other_info {
	margin-top: 20rpx;
	background: #fff;
}

.group_other_info .rule_container {
	padding-left: 24rpx;
}
.group_other_info .column {
	font-size: 28rpx;
	border-bottom: 2rpx solid #E3E3E3;
	padding: 24rpx;
	color: #253A4E;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.rule_container .column {
	padding-left: 0;
}

.group_other_info .collage_palying image {
	width: 40rpx;
	height: 40rpx;
}

.rules_step {
	padding: 20rpx;
  display: flex;
  align-items: center;
	justify-content: space-around;
	padding-left: 0;
}
.rules_step .step_item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.step_item .step_text {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 24rpx;
  color: #556675;
  margin-left: 8rpx;
  line-height: 32rpx;
}
.dashed_line {
	width:56rpx;
	border-top: 2rpx dashed #E6E9EB;
	position: relative;
}
.dashed_line:after {
	content: '';
    display: block;
    width: 10rpx;
	height: 2rpx;
	position: absolute;
	right: 0;
	top: -5rpx;
    background: #E6E9EB;
    transform: rotate(45deg);
}
.rules_step .step_item image {
  width: 64rpx;
  height: 64rpx;
  display: block;
}

/*拼团活动时间结束*/
.more_group_box {
	overflow: hidden;
	padding: 0 24rpx;
}
.group_finish .more_group_box .more_group {
	margin-top: 72rpx;
	font-size: 26rpx;
	color: #9EA8B1;
	text-align: center;
	padding: 24rpx 0;
}

.swiper_box {
	width: 702rpx;
	height: 304rpx;
	background: #fff;
	box-shadow: 0px 6rpx 16rpx 0px rgba(13,37,59,0.04);
	border-radius: 8rpx;
	display: flex;
	margin-bottom: 24rpx;
  }
  .swiper_box image {
	width: 304rpx;
	height: 304rpx;
	border-radius: 8rpx;
	border-top-right-radius: 0;
	border-bottom-right-radius: 0;
	flex-shrink: 0;
  }
  .swiper_box .swiper_box_item {
	padding: 24rpx;
	box-sizing: border-box;
	flex-grow: 1;
  }
  .swiper_box .swiper_box_item .title {
	height: 80rpx;
	font-size: 28rpx;
	color: #0D1A26;
	overflow: hidden;
	text-overflow:ellipsis;
	display:-webkit-box;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
	line-height: 40rpx;
  }
  .swiper_box .swiper_box_item .info {
	font-size: 26rpx;
	color: #9EA8B1;
	line-height:36rpx;
	margin-top: 24rpx;
  }
  .swiper_box_item .info .info_count {
	font-size: 28rpx;
	color: #F35D51;
  }
  .swiper_box_item .price {
	margin-top: 64rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
  }
  .swiper_box_item .price .price_text {
	font-size: 24rpx;
	color: #9EA8B1;
  }
  .price_text .display_price {
	font-size: 32rpx;
	color: #F35D51;
  }
  .price_text .display_price text {
	font-size: 24rpx;
  }
  .price_text .original_price {
	text-decoration: line-through;
	margin-left: 8rpx;
  }
  .price .buy_button {
	width: 110rpx;
	height: 48rpx;
	font-size: 26rpx;
	color: #FFFFFF;
	text-align: center;
	line-height: 48rpx;
	background:linear-gradient(90deg,rgba(255,153,99,1) 0%,rgba(247,114,87,1) 50%,rgba(243,93,81,1) 100%);
	border-radius:4rpx;
  }

/* 规格选择choose */
/* mask  */
.mask{
	width: 750rpx;
	height: 100%;
	background: #000;
	z-index: 10;
	position: fixed;
	top: 0;
	opacity: 0.4;
}

/* choose  */
.choose{
	position: fixed;
	z-index: 100;
	width: 750rpx;
	box-sizing: border-box;
	bottom: 0;
	background: #FFFFFF;
	padding: 24rpx;
	border-radius: 20rpx 20rpx 0 0;
}
.choose_price{
	margin-bottom: 40rpx;
	color: #9EA8B1;
	display: flex;
	align-items: flex-end;
	font-size: 26rpx;
}
.choose .choose_price image:first-child{
	width: 176rpx;
	height: 176rpx;
	display: block;
	flex-shrink: 0;
}
.choose_price .desc{
	display: flex;
	flex-direction: column;
	margin-left: 24rpx;
}
.choose_price .desc view text{
  margin-right: 10rpx;
}
.choose_price .desc>text:first-child{
	color: #F35D51;
	font-size: 36rpx;
  margin-bottom: 16rpx;
}
.choose_price .desc>text:first-child text {
	font-size: 24rpx;
}
.choose_price .desc>text:nth-child(2){
  margin-bottom: 16rpx;
}
.choose_price image:last-child{
	position: absolute;
	top: 24rpx;
	right: 24rpx;
	width: 40rpx;
	height: 40rpx;
}

.color_size{
	overflow: scroll;
	color: #556675;
}

/* choose color  */
.title{
	display: block;
	margin-bottom: 16rpx;
	font-size: 26rpx;
}
.choose_color {
	border-bottom: 2rpx solid #F3F4F5;
	padding-top: 24rpx;
}
.choose_color view{
	display: flex;
  justify-content: flex-start;
	padding-left:18rpx;
	overflow: hidden;
  flex-wrap: wrap;
  /* padding-bottom: 16rpx; */
}
.choose_color view label{
	padding: 14rpx 24rpx;
  line-height: 36rpx;
	background: #F7F9FB;
  border-radius: 8rpx;
	margin-right: 24rpx;
	margin-bottom: 24rpx;
	font-size: 26rpx;
	box-sizing: border-box;
}

/* active style  */
.choose view label.active{
	background: rgba(243, 93, 81, 0.05);
	padding: 12rpx 22rpx;
	color: #F15043;
	border:2rpx solid #F35D51;
}

/* count  */
.count{
	padding-top: 24rpx;
	display: flex;
	align-items: center;
  margin-bottom: 128rpx;
	justify-content: space-between;
	color: #556675;
}
.count .number{
	font-size: 26rpx;
}
.count view{
	height: 64rpx;
	display: flex;
}
.count view text{
	display: block;
	width: 64rpx;
	height: 64rpx;
	text-align: center;
	line-height: 60rpx;
	border: 2rpx solid #CFD3D8;
	box-sizing: border-box;
}
.count view text:first-child {
	border-radius: 4rpx 0 0 4rpx;
}
.count view text:last-child{
	border-radius: 0 4rpx 4rpx 0;
}
.count view .num {
	width: 96rpx;
	height: 64rpx;
	font-size: 28rpx;
	border: none;
	border-top: 2rpx solid #CFD3D8;
	border-bottom: 2rpx solid #CFD3D8;
	color: #253A4E;
	line-height: 60rpx;
	text-align: center;
}

/* 禁用样式  */
.disabled{
	color: #E3E3E3;
}

/* confirm  */
.confirm{
	width: 702rpx;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	background: linear-gradient(90deg,#FF9963 0%,#F77257 50%,#F35D51 100%);
	color: #FFFFFF;
	font-size: 32rpx;
	padding: 0;
	border-radius: 8rpx;
}
.store{
	width: 750rpx;
	height: 96rpx;
	box-sizing: border-box;
	padding: 24rpx;
	background: #FFFFFF;
	margin-top: 24rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.store image{
	width: 48rpx;
	height: 48rpx;
	border-radius: 4rpx;
	margin-right: 16rpx;
}
.store>view{
	display: flex;
	font-size: 28rpx;
	color: #253A4E;
	align-items: center;
}
.store navigator{
	width: 136rpx;
	height: 48rpx;
	box-sizing: border-box;
	border: 2rpx solid #F35D51;
	border-radius: 4rpx;
	text-align: center;
	font-size: 26rpx;
	color: #F35D51;
	line-height: 44rpx;
}